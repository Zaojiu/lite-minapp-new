/* components/course/course.wxss */

.wItem{
  display: flex;
  margin-bottom: 28px;
}
.wItem .img{
 width: 80px;
  height: 113px;
  margin-right: 12px;
  position: relative;
  font-size: 0; 
}
.wItem .img image{
  width: 80px;
  height: 113px;
  object-fit: cover;
  border-radius:4px; 
}
.wItem .img .course{
  position: absolute;
  width: 24px;
  height: 13px;
  bottom: 3px;
  right: 4px;
}
.wItem .img .course image{
   width: 24px;
  height: 13px;
}
.wItem .text{
  position: relative;
}
.wItem .text .tit{
  font-size: 16px;
  line-height: 22px;
  color: rgb(85, 85, 85);
  display: inline-block;
  font-weight: 700;
  margin-top: 3px;
   overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
}
.wItem .text .name{
  font-size: 12px;
  line-height: 14px;
  color: rgb(179, 179, 179);
  font-weight: 700;
  margin: 8px 0 25px 0;
   overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 1;
          -webkit-box-orient: vertical;
}
.wItem .text .money{
  font-size: 12px;
  line-height: 16px;
  color: rgb(85, 85, 85);
  position: absolute;
  bottom: 3px;
  left: 0;
  font-weight: 600;
}