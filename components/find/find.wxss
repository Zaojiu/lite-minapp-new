/* components/find/find.wxss */
.overList{
  overflow: hidden;
}
.findList{
 width: 50%;
 margin-top: 24px;
 
 /* column-count: 2; */
 overflow: hidden;
 
}
.findList .item{
  
  font-size: 0;
  margin-bottom: 14px;
  overflow: hidden;
     /* break-inside: avoid; */
}
.findList.left{
  box-sizing: border-box;
  float: left;
  padding-right: 10px;
}
.findList.right{
  box-sizing: border-box;
  float: right;
   padding-left: 10px;
}
.findList.right .item:first-child{
  margin-bottom:0; 
}
.findList .item .img{
  
}
.findList .item .text{
 margin: 8px 0;
   overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
}
.findList .item .text text{
  display: inline-block;
  font-size: 12px;
  font-weight: 700;
  line-height: 17px;
  color: rgb(85, 85, 85)
}
.findList .item .img image{
  width: 100%;
  border-radius: 4px;
  
}
.item-bottom{
  font-size:9px;
 overflow: hidden;
}
.item-bottom text{
  display: inline-block;
  
  
}
.item-bottom .name{
display: inline-block;
float: left;

}
.item-bottom .like{
display: inline-block;
float: right;
margin-top: 1px;
}
.name text{
   height: 16px;
   line-height: 16px;
 }
 .name image{
  width: 16px;
  height: 16px;
  border-radius: 50%;
 float: left;
 margin-right: 4px;
  
}
 .like image{
  width: 14px;
  height: 14px;
  float: left;
  margin-right: 2px;
}
 .like text{
   height: 14px;
   line-height: 14px;
 }