/* components/search/search.wxss */
.search-con{
  height: 40px;

 background-color:#fff; 
  
  top: 0px;
  z-index: 999;
  
}
.fixed{
position: fixed;
width: 100%;
}
.search{
 margin: 10px 20px 0 20px;
  height: 40px;
  line-height: 40px;
 background-color:#fff; 
 
}
.search .image{
  width: 20px;
  height: 20px;
  position: absolute;
  left: 36px;
  top: 20px;
  z-index: 2;

}
.search .input{
  height: 40px;
  line-height: 40px;

   width: auto;
    border-radius: 30px;
    
     padding: 0 20px 0 40px;
     font-size: 16px;
     background:rgb(239, 239, 239);
   
}
.marginRight{
    margin-right: 40px;
     padding: 0 20px 0 20px !important;
}
.search text{
  display: inline-block;
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 14px;
  font-weight: 500;
  color: rgb(179, 179, 179);
}
.tab-center{
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  width: 100%;
  height: 100vh;
  z-index: 999;
  background-color: #fff;
  padding: 28px 20px 0 20px;
  box-sizing: border-box;
}
.tab-center  text{
  display: block;
  font-size: 12px;
  color: rgb(179, 179, 179);
  line-height: 16px;
  margin-bottom: 12px;
  font-weight: 400;
}
.tab-center view{
  font-size: 16px;
  color: rgb(85, 85, 85);
  line-height: 20px;
  margin-bottom: 16px;
  font-weight: 500;
}
.tab-center .lately{
  position: relative;
}
.tab-center .lately image{
  width: 16px;
  height: 16px;
  position: absolute;
  right: 3px;
  top: 0;
}
.tab-center .hot text{
  padding-top: 16px;
}