.items{
  margin-top: 24px;
}
.items .item{
  margin: 0 0 30px 0;
}
.items .item .img{
  position: relative
}
.items .item .image{
  display: block;
  width: 100%;
  border-radius:4px; 
}
.items .item .imgT{
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;
}
.items .item .text{
  position: absolute;
  bottom: 28px;
  left: 20px;
  right: 20px;
  color: #fff;

}
.text text{
  display: block;
}
.text .tit{
  
  font-weight: 700;
  font-size: 24px;
  line-height: 33px;
}
.text .desc{
  margin: 20px 0 10px 0;
  font-size: 14px;
  line-height: 14px;
}
.text .content{
  font-size: 12px;
  line-height: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.text2{
  padding: 0 20px 24px 20px;
  box-shadow: 0 5px 16px rgba(0, 0, 0, 0.3);
   border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.text2 text{
  display: block;
}
.text2 .tit{
  color: rgb(56, 56, 56);
  font-weight: 700;
  font-size: 20px;
  line-height: 26px;
  padding: 10px 0;
}
.text2 .content{
  font-size: 12px;
  line-height: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.dateTime{
  margin: 18px 0 12px 0;
}
.dateTime .month{
  font-size: 24px;
  color: #555;
}
.dateTime .week{
  font-size: 14px;
  color: #b3b3b3;
}