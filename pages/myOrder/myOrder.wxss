/* pages/myOrder/myOrder.wxss */
.order{
  padding: 0 20px;
}

.tuijian{
  margin: 20px 0px 16px 0px;
  
}
.tuijian .tui-item{
  height: 28px;
  line-height: 28px;
  font-size: 12px;
  color: rgb(179, 179, 179);
  font-weight: 700;
  padding: 0 12px;
  display: inline-block;
  border-radius: 14px;
}
.tuijian .tui-item.active{color: rgb(85, 85, 85);background-color: rgb(239, 239, 239)}

.item{
  margin-bottom: 40px;
}
.item .item-head{
  display: flex;
  height: 80px;
  background: rgb(247, 247, 247);
}
.item-head .img{
  width: 80px;
  margin-right: 8px;
}
.item-head .img image{
width: 80px;
  height: 80px;
}
.item-head .info{
flex: 1;
}
.item-head .info .title{
  font-size: 14px;
  line-height: 20px;
  font-weight: 700;
  color: rgb(85, 85, 85);
  margin: 7px 0 8px 0;
   overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
}
.item-head .info .type{
  font-size: 14px;
  line-height: 14px;
  font-weight: 700;
  color: rgb(179, 179, 179);
}
.item-head .moneyInfo{
  width: 57px;
  text-align: right;
  margin-right: 8px;
}
.item-head .moneyInfo .newMoney{
   font-size: 14px;
  line-height: 14px;
  font-weight: 700;
  color: rgb(85, 85, 85);
  margin: 10px 0 6px 0;
}
.item-head .moneyInfo .oldMoney{
  font-size: 14px;
  line-height: 14px;
  color: rgb(179, 179, 179);
  text-decoration:line-through;
  margin-bottom: 6px;
}
.item-head .moneyInfo .num{
   font-size: 14px;
  line-height: 14px;
  color: rgb(179, 179, 179);
}
.item-center{
  float: right;
  width: 100%;
  overflow: hidden;
  text-align: right;
  font-size: 0;
  margin: 8px 0 16px 0;
}
.item-center .info{
  font-size: 12px;
  line-height: 16px;
  color: rgb(85, 85, 85);
  display: inline-block;
}
.item-center .info .totalMoney{
   display: inline-block;
  font-size: 16px;
  font-weight: 600;
}
.item-footer {
text-align: right;
}
.item-footer .order{
  font-size: 13px;
  color: rgb(85, 85, 85);
  font-weight: 700;
  padding: 6px 12px;
  display: inline-block;
  border-radius: 4px;
  margin-left: 20px;
}
.item-footer .qxOrder{
  background-color: rgb(239, 239, 239);
}
.item-footer .zOrder{
  background-color: rgb(173, 37, 38);
  color: #fff;
}
