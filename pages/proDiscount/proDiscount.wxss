/* pages/proDiscount/proDiscount.wxss */
.container {
    position: relative;
    padding: 10px 16px;}
    .content{width: 100%;}
    .content .item_tab{
 width: 100%;
        overflow: auto;
    }
    .tabs{
        width: 100%;
        margin-bottom: 16px;
    }
    .tabs .tab{
      font-size: 12px;
          padding: 6px 12px;
          margin-right: 20px;
          display: inline-block;
          color: rgb(178, 178, 178);
          font-weight: 500;
          font-style: normal;
    }
    .active {
          color: rgb(85, 85, 85);
          background-color: rgb(239, 239, 239);
          border-radius: 14px;
        }
         .item_list .topItem{
        height: 40px;
        border-radius: 4px;
        background-color: #fff;
        border-left: 4px solid rgb(173, 37, 38);
        line-height: 40px;
        margin-bottom: 20px;
        font-size: 16px;
        padding-left: 20px;

        margin-left: 2px;
        font-weight: 700;
        position: relative;
        box-shadow: 0 1px 2px 2px rgba(0,0,0,0.03);


      }
      .item_list .item{
        position: relative;

        margin: 0 0 20px 0;
        height: 88px;
        /*border: 1px solid #eee;*/
       display: flex;
          border-radius: 4px;
        padding: 10px 16px;
        font-size: 0;
        box-sizing: border-box;
      }
      .text{
        flex: 1;
          overflow: hidden;
          padding-left: 10px;
      }
      .txt_one{
            overflow:hidden;
            text-overflow:ellipsis;
            white-space:nowrap
          }
          .txt_h3{
            font-size: 16px;
            line-height: 18px;
            color: rgb(85,85,85);
            margin-top: 5px;
            font-weight: 600;
          }
          .txt_time{
             font-size: 12px;
            line-height: 12px;
            color: rgb(179,179,179);
            margin: 8px 0 6px 0;
            display: block;
            font-weight: 600;
          }
          .txt_address{
            font-size: 12px;
            line-height: 12px;
            color: rgb(179,179,179);
            font-weight: 700;
            font-style: normal;
          }
