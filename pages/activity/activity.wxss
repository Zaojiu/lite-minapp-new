/* pages/activity/activity.wxss */
.actiList{
  margin-top: 16px;
}
.actiList .item{

  font-size: 0;
  border-radius: 4px;
  margin-bottom: 28px;
}
.img{
  position: relative;
  width: 100%;
  height: 188px;
  border-radius: 4px;
}
 .state{
  position: absolute;
  display: inline-block;
  top:12px;
  right: 0;
  width: 52px;
  height: 20px;
  background-color: rgba(204, 43, 43,0.8);
  z-index: 4;
  color: #fff;
  line-height: 20px;
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 10px;
   border-bottom-left-radius: 10px;
}
.over{
background-color: rgba(0, 0, 0,0.5);
 
}
.actiList .img image{
  width: 100%;
  height: 188px;
  z-index: 2;
  border-radius: 4px;
}
.actiList .text .subject{
  font-size: 18px;
  line-height: 24px;
  color: rgb(85, 85, 85);
  overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          margin:12px 0 8px 0; 
}
.actiList .text .desc{
  font-size: 14px;
  line-height: 20px;
  color: rgb(204, 204, 204);
   overflow: hidden;
          text-overflow: ellipsis;
          display: -webkit-box;
          -webkit-line-clamp: 1;
          -webkit-box-orient: vertical;
}
