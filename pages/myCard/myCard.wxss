.hdItem{
 margin: 0 0 20px;
    height: 88px;
    display: flex;
    border-radius: 4px;
    padding: 10px 16px;
}
.hdItem .left{
    flex: 1;
    overflow: hidden;
}
.hdItem .left .tit{
    font-size: 16px;
    line-height: 18px;
    color: #555;
    margin-top: 5px;
        overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 600;
}
.hdItem .left .time{
    font-size: 12px;
    line-height: 12px;
    color: #b3b3b3;
    margin: 8px 0 6px;
    display: block;
    font-weight: 600;
}
.hdItem .left .address{
    font-size: 12px;
    line-height: 12px;
    color: #b3b3b3;
    font-weight: 700;
    font-style: normal;
}
.hdItem .right{
    width: 50px;
    text-align: center;
}
.hdItem .right image{
    width: 44px;
    height: 44px;
}
.hdItem .right .friend{
    font-size: 10px;
    color: #fff;
    background-color: #ad2526;
    width: 48px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    border-radius: 2px;
    font-weight: 600;
}
.hdItem .right .yesFriend{
  background-color: #efefef;
    color: #b3b3b3;
}