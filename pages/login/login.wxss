.bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  /* background: rgba(0, 0, 0, 0.3); */
  z-index: 1000000;
}
.showMobal{
  
  width: 260px;
  padding: 20px ;
  
  background: #fff;
  border-radius: 5px;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -70px;
  margin-left: -130px;
  box-shadow: 0 5px 16px rgba(0, 0, 0, 0.3);
  text-align: center;
}
.showMobal text{
  display: block;
  font-size: 15px;
  color: rgb(179, 179, 179);
  padding-bottom: 20px; 
}
.showMobal button{
  height: 36px;
  line-height: 36px;
  
}