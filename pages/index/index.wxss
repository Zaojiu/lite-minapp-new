
/**index.wxss**/

/* //搜索框 */

.search-con{
  height: 40px;

 background-color:#fff; 
  
  top: 0px;
  z-index: 999;
  
}
.fixed{
position: fixed;
width: 100%;
}
.search{
 margin: 10px 20px 0 20px;
  height: 40px;
  line-height: 40px;
 background-color:#fff; 
 
}
.search .image{
  width: 20px;
  height: 20px;
  position: absolute;
  left: 36px;
  top: 20px;
  z-index: 2;

}
.search .input{
  height: 40px;
  line-height: 40px;

   width: auto;
    border-radius: 30px;
    
     padding: 0 20px 0 40px;
     font-size: 16px;
     background:rgb(239, 239, 239);
   
}
.marginRight{
    margin-right: 40px;
     padding: 0 20px 0 20px !important;
}
.search text{
  display: inline-block;
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 14px;
  font-weight: 500;
  color: rgb(179, 179, 179);
}
.tab-center{
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  width: 100%;
  height: 100vh;
  z-index: 999;
  background-color: #fff;
  padding: 28px 20px 0 20px;
  box-sizing: border-box;
}
.tab-center  text{
  display: block;
  font-size: 12px;
  color: rgb(179, 179, 179);
  line-height: 16px;
  margin-bottom: 12px;
  font-weight: 400;
}
.tab-center view{
  font-size: 16px;
  color: rgb(85, 85, 85);
  line-height: 20px;
  margin-bottom: 16px;
  font-weight: 500;
}
.tab-center .lately{
  position: relative;
}
.tab-center .lately image{
  width: 16px;
  height: 16px;
  position: absolute;
  right: 3px;
  top: 0;
}
.tab-center .hot text{
  padding-top: 16px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.tab-h{

    height: 40px;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx; text-align: center; font-size: 16px; white-space: nowrap; z-index: 4;}
.tab-item{margin:0 15px;display: inline-block;font-size: 16px;font-weight: 700;color: rgb(179, 179, 179);letter-spacing: 2px;}
.tab-item.active{color: rgb(85, 85, 85);position: relative;line-height: 24px;}
/* .tab-item.active:after{ content: "";display: block;height: 3px;width: 36px;background: rgb(85, 85, 85);position: absolute; bottom: -4px;left: 0rpx;border-radius: 2px;} */
.tab-h .scroll-tab{
  display: inline-block;
  position: relative;
}
.tab-h .tab_tips {
  width: 36px;
  height: 3px;
  border-radius: 2px;
  background-color:rgb(85, 85, 85);
  position: absolute;
  top: 33px;
  transition: 1s;
}
.tab-scroll{
  position: fixed;
  top: 0px;
  padding-bottom: 10px;
  background-color:#fff; 
}
.swiper-top{
  padding-top: 40px;
}

